<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.developers.developersFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_developes1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/nav_dev"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_main"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/nav_developes1"
            android:scaleType="fitCenter"
            android:src="@drawable/profil" />

        <TextView
            android:id="@+id/dev1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dev1"
            android:textAlignment="center"
            android:layout_below="@id/img_main"
            android:textSize="20sp" />

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@id/dev1"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRowBtn1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp" >

                <Button
                    android:id="@+id/btn_gmail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/gmail64"
                    android:gravity="center|center_horizontal"
                    android:text="@string/gmail"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_linkedin"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/linkedin64"
                    android:text="@string/linkedin"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal" />

                <Button
                    android:id="@+id/btn_github"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/github64"
                    android:gravity="center|center_horizontal"
                    android:text="@string/github"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_instagram"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/instagram64"
                    android:text="@string/insta"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal" />

            </TableRow>
        </TableLayout>


        <TextView
            android:id="@+id/nav_developes2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableLayout1"
            android:layout_marginTop="32dp"
            android:text="@string/nav_dev"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_main2"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@id/nav_developes2"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/profile2" />

        <TextView
            android:id="@+id/dev2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_main2"
            android:text="@string/dev2"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@id/dev2"
            android:layout_marginBottom="70dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRowBtn2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp" >

                <Button
                    android:id="@+id/btn_gmail2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/gmail64"
                    android:gravity="center|center_horizontal"
                    android:text="@string/gmail"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_linkedin2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/linkedin64"
                    android:text="@string/linkedin"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal" />

                <Button
                    android:id="@+id/btn_github2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/github64"
                    android:gravity="center|center_horizontal"
                    android:text="@string/github"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_instagram2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/instagram64"
                    android:text="@string/insta"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal"/>

            </TableRow>
        </TableLayout>
    </RelativeLayout>

</ScrollView>