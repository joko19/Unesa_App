<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nama_fakultas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Fakultas"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_fakultas"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:src="@drawable/unesa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_fakultas" />

    <TextView
        android:id="@+id/visi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISI"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_fakultas" />

    <TextView
        android:id="@+id/tv_visi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="visi fakultas"
        app:layout_constraintTop_toBottomOf="@+id/visi"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/misi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MISI"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_visi" />

    <TextView
        android:id="@+id/tv_misi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="misi fakultas"
        app:layout_constraintTop_toBottomOf="@+id/misi"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>